<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/homeTeamViews"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:text="@string/home_team" />

	<EditText
		android:id="@+id/homeTeam"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/box_bg"
		android:gravity="center"
		android:hint="@string/team_name"
		android:inputType="text"
		android:nextFocusDown="@+id/homePlayer1Name"
		android:textSize="24sp" >
	</EditText>

	<include layout="@layout/row_column_headers" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1" >

		<include layout="@layout/row_p1_home" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1" >

		<include layout="@layout/row_p2_home" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1" >

		<include layout="@layout/row_p3_home" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1" >

		<include layout="@layout/row_p4_home" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1" >

		<include layout="@layout/row_p5_home" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1" >

		<include layout="@layout/row_averages_home" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1" >

		<include layout="@layout/row_totals_home" />
	</LinearLayout>

</LinearLayout>