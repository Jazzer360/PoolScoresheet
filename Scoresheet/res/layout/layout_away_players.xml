			app:sumRule="gray_when_missing" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/row_height" >

		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical|right"
			android:paddingRight="2dp"
			android:text="@string/round_ave" />

		<com.derekjass.poolscoresheet.views.IntegerView
			android:id="@+id/awayAveR1"
			android:layout_width="@dimen/score_box_width"
			android:layout_height="match_parent"
			android:background="@drawable/box_white"
			android:gravity="center"
			android:textSize="@dimen/score_text_size"
			app:mustSum="false" />

		<com.derekjass.poolscoresheet.views.IntegerView
			android:id="@+id/awayAveR2"
			android:layout_width="@dimen/score_box_width"
			android:layout_height="match_parent"
			android:background="@drawable/box_white"
			android:gravity="center"
			android:textSize="@dimen/score_text_size"
			app:mustSum="false" />

		<com.derekjass.poolscoresheet.views.IntegerView
			android:id="@+id/awayAveR3"
			android:layout_width="@dimen/score_box_width"
			android:layout_height="match_parent"
